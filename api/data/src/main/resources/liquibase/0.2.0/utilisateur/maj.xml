<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet
        id="0.2.0-create-table-utilisateur"
        author="agillereau">
        <createTable tableName="utilisateur">
            <column
                name="id"
                type="bigint"
                autoIncrement="true">
                <constraints
                    primaryKey="true"
                    nullable="false" />
            </column>
            <column
                name="nom"
                type="varchar(50)">
                <constraints nullable="false" />
            </column>
            <column
                name="prenom"
                type="varchar(50)">
                <constraints nullable="false" />
            </column>
            <column
                name="date_naissance"
                type="datetime" />
            <column
                name="email"
                type="varchar(255)" />
            <column
                name="telephone_mobile"
                type="varchar(10)" />
            <column
                name="telephone_fixe"
                type="varchar(10)" />
            <column
                name="code_paiement"
                type="varchar(20)">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
