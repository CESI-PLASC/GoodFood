<databaseChangeLog  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
	                http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="0.0.1-create-table-categorise" author="cgiboulot">
        <createTable tableName="categorise">
            <column name="produit_id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="categorie_id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="categorise"
                                 baseColumnNames="produit_id"
                                 constraintName="fk_categorise_produit_id"
                                 referencedTableName="produit"
                                 referencedColumnNames="id" />

        <addForeignKeyConstraint baseTableName="categorise"
                                 baseColumnNames="categorie_id"
                                 constraintName="fk_categorise_categorie_id"
                                 referencedTableName="categorie"
                                 referencedColumnNames="id" />
    </changeSet>

</databaseChangeLog>
